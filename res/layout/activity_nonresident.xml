<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#228B22"
    android:layout_height="match_parent"
    tools:context=".student">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
             android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="221dp"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/sisa" />

            <ImageButton
                android:id="@+id/chat"
                android:layout_width="151dp"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="#228B22"
                android:backgroundTint="@color/white"
                android:src="@drawable/chat"
                android:text=""
                app:iconGravity="textStart" />

        </LinearLayout>
        <Button
            android:id="@+id/booking"
            android:layout_width="179dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:text="Book Hostel"
            android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="452dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image"

            android:gravity="center"
            android:text="NON_RESIDENT"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="#228B22"
                android:fontFamily="sans-serif-black"
                android:paddingTop="10dp"
                android:src="@drawable/username"
                android:text="Estate name"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/estatename"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:autofillHints="estate name"
                android:background="#228B22"
                android:hint="estate name"
                android:inputType="text"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="#228B22"
                android:fontFamily="sans-serif-black"
                android:paddingTop="10dp"
                android:src="@drawable/username"
                android:text="Room number"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/Rnumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:autofillHints="estate name"
                android:background="#228B22"
                android:hint="room number"
                android:inputType="text"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="#228B22"
                android:fontFamily="sans-serif-black"
                android:paddingTop="10dp"
                android:src="@drawable/username"
                android:text="phone number"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="enter phone number"
                android:ems="10"
                android:hint="enter phone number"
                android:inputType="phone"
                android:textColorHint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="#228B22"
                android:fontFamily="sans-serif-black"
                android:paddingTop="10dp"
                android:src="@drawable/lock"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:autofillHints="email"
                android:ems="10"
                android:hint="enter the email adress"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/white" />

        </LinearLayout>

        <TextView
            android:layout_width="369dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Describe the issue"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/issue"
            android:layout_width="401dp"
            android:layout_height="71dp"
            android:ems="1000"
            android:lines="200"
            android:layout_marginStart="10dp"
            android:inputType="text" />

    </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="211dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="submit" />
    </LinearLayout>

</ScrollView>